{
  "name": "Huobi Tools",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Huobi Tools",
  "browser_action": {
      "default_title": "Huobi Tools"
  },
  "content_scripts": [{
      "matches": ["https://otc.huobipro.com/*", "https://otc.huobi.pro/*"],
      "js": ["vue.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
  }],
  "background": {
      "persistent": true,
      "scripts": [
          "background.js"
      ]
  },
  "permissions": [
      "activeTab",
      "background",
      "cookies",
      "unlimitedStorage",
      "notifications"
  ]
}